generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URI")
}

model Departure {
  id           Int      @id @default(autoincrement())
  airline      String
  flightnumber String
  destination  String
  departdate   String
  departtime   String
  gate         String
  remark       String

  @@map("departures")
}
